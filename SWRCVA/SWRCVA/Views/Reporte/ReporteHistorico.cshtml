@model SWRCVA.Models.Reporte

@{
    ViewBag.Title = "ReporteHistorico";
}

<h2>Reportes</h2>

@using (Html.BeginForm("ReporteHistorico", "Reporte", FormMethod.Post, new { target = "_blank" }))
{
    @Html.AntiForgeryToken()
    <div class="MatenimientoFondo">
        <div id="formReporte" class="form-horizontal">
            <h4>Reporte Histórico</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.FechaInicio, "Desde:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.FechaInicio, new { @class = "form-control datepicker ", @readonly = "readonly", required = "required", title = "Fecha requerida!" })
                    @Html.ValidationMessageFor(model => model.FechaInicio, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.FechaFin, "Hasta:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.FechaFin, new { @class = "form-control datepicker", @readonly = "readonly", required = "required", title = "Fecha requerida!" })
                    @Html.ValidationMessageFor(model => model.FechaFin, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Tabla, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.Tabla, (new SelectList(
                  new List<Object>{
                      new { value = "Categoria Material" , text = "Categoria Material"  },
                      new { value = "Cliente" , text = "Cliente"  },
                      new { value = "Color Material" , text = "Color Material"  },
                      new { value = "Cotización" , text = "Cotización"  },
                      new { value = "Factura" , text = "Factura"  },
                      new { value = "Material" , text = "Material"  },
                      new { value = "Producto" , text = "Producto"  },
                      new { value = "Proveedor" , text = "Proveedor"  },
                      new { value = "Rol" , text = "Rol"  },
                      new { value = "SubCategoria" , text = "SubCategoria"  },
                      new { value = "Tipo Material" , text = "Tipo Material"  },
                      new { value = "Tipo Producto" , text = "Tipo Producto"  },
                      new { value = "Usuario" , text = "Usuario"  },
                      new { value = "Valor" , text = "Valor"  }
                  },
                  "value",
                  "text",
                   1)), new { @class = "form-control", @required = "required", title = "El campo Tabla es necesario" })
                    @Html.ValidationMessageFor(model => model.Tabla, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <h5 class="text-danger">@ViewBag.Message</h5>
                </div>
            </div>

            <div class="col-md-offset-2 col-md-4t">
                <button type="submit" value="" id="Procesar" class="btn-primary btn-lg" title="Procesar">Procesar</button>
                <button value="" id="Limpiar" class="btn-primary btn-lg" title="Limpiar">Limpiar</button>
            </div>
            </div>
        </div>

        }
        @section Scripts {
            @Scripts.Render("~/bundles/datetime")
            @Scripts.Render("~/bundles/FuncionesReportes")
            <script src="~/Scripts/FuncionesPicker.js"></script>
            <link href="~/Content/jquery-ui.css" rel="stylesheet" />
        }

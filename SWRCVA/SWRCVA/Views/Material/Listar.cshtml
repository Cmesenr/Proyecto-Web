@using PagedList.Mvc;
@model PagedList.IPagedList<SWRCVA.Models.Material>
@section Scripts {
    @Scripts.Render("~/bundles/FuncionesMaterial")
}
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Listar";
}

<h2>Materiales</h2>

<p>
    @Html.ActionLink("Registrar Nuevo", "Registrar")
</p>
@using (Html.BeginForm("Listar", "Material", FormMethod.Get))
{
    <p>
        Buscar por nombre: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Search" />
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Nombre", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            Categoria
        </th>
        <th>
            Proveedor
        </th>
        <th>
            Estado
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoriaMat.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Proveedor.Nombre)
        </td>
        <td>
            @if (item.Estado == 1)
                {
                @("Activo");
                }
                else
                {
                @("Inactivo");
                }
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.IdMaterial }) |
            @Html.ActionLink("Borrar", "Borrar", new { id=item.IdMaterial })
        </td>
    </tr>
}

</table>
<br />
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
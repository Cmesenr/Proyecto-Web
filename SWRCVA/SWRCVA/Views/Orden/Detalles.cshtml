@model SWRCVA.Models.Cotizacion

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Detalles de orden";
}

<br />
<div class="row" id="headerPrincipal">
    <div class="col-md-2">
        <h2>Orden</h2>
    </div>
    <br />
    <div class="text-right">
        <button type="button" id="btnProcesarEdit" onclick="" class="btn btn-success"><h4>Terminar Orden</h4></button>
    </div>
</div>
    @using (Html.BeginForm("Index", "Orden", FormMethod.Get))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal" id="formOrden">
            <hr />
            <div class="row">
                <div class="col-md-2">
                    <div class="form-group">
                        <div class="col-md-12">
                            <b>Fecha:</b> <br />@Html.DisplayFor(modelItem => Model.Fecha)
                        </div>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <div class="col-md-12">
                                <b>Cotización:</b> <br />@Html.DisplayFor(modelItem => Model.IdCotizacion)
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <div class="col-md-12">
                            <b>Cliente:</b> <br />@Html.DisplayFor(modelItem => Model.Cliente.Nombre)
                        </div>
                    </div>
                </div>
                <div class="col-md-1">
                    <div class="form-group">
                        <div class="col-md-12">
                            <b>Estado:</b> <br />@if (Model.Estado == "P")
                            {@( "Procesada")}
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <div class="col-md-12">
                            <b>Comentario:</b> <br />@Html.DisplayFor(modelItem => Model.Comentario)</div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-md-7">
                    <div class="row">
                        <div class="form-group">
                            <div class="col-md-12">
                                <table class="table" id="ListaProductos"></table>
                            </div>
                        </div>
                        <div>
                            <button onclick="location.href='@Url.Action("Index")'" class="btn btn-primary"><h4>Regresar a la Lista</h4></button>
                        </div>
                    </div>
                </div>

                <div class="col-md-5" align="right">
                    <div class="col-md-10" align="right">
                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-12">
                                    <table class="table" id="ListaMateriales"></table>
                                </div>
                            </div>
                        </div>
                     </div>
                </div>
            </div>
           <hr />
        </div>
    }
@section Scripts {
       @Scripts.Render("~/bundles/FuncionesOrden")
        <script type="text/javascript">
            CargarListaProductos();
        </script>
}

<div class="modal fade" id="ModalMensaje" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="HeaderModalInfo">Error</h4>
            </div>
            <div class="modal-body">
                <p id="TextModalinfo"></p>
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn">Ok</button>
            </div>
        </div>

    </div>
</div>

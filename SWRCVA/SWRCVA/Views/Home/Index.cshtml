@{
    ViewBag.Title = "Home Page";
}
<link href="~/Content/camera.css" rel="stylesheet" />

    <div id="back_to_camera">
        <a href="http://www.pixedelic.com/plugins/camera/">&larr; Back to the Camera project</a>
    </div><!-- #back_to_camera -->

    <div class="fluid_container">
        <div class="camera_wrap camera_emboss pattern_5 camera_ash_skin" id="camera_wrap_4">
            <div data-thumb="../Content/Imagenes/images/slides/thumbs/Trabajo1.jpg" data-src="../Content/Imagenes/images/slides/Trabajo1.jpg">
            </div>
            <div data-thumb="../Content/Imagenes/images/slides/thumbs/Trabajo2.jpg" data-src="../Content/Imagenes/images/slides/Trabajo2.jpg">
            </div>
            <div data-thumb="../Content/Imagenes/images/slides/thumbs/bridge.jpg" data-src="../Content/Imagenes/images/slides/bridge.jpg">
            </div>
            <div data-thumb="../Content/Imagenes/images/slides/thumbs/leaf.jpg" data-src="../Content/Imagenes/images/slides/leaf.jpg">
            </div>
            <div data-thumb="../Content/Imagenes/images/slides/thumbs/road.jpg" data-src="../Content/Imagenes/images/slides/road.jpg">
            </div>
            <div data-thumb="../Content/Imagenes/images/slides/thumbs/sea.jpg" data-src="../Content/Imagenes/images/slides/sea.jpg">
            </div>
            <div data-thumb="../Content/Imagenes//images/slides/thumbs/shelter.jpg" data-src="../Content/Imagenes/images/slides/shelter.jpg">
            </div>
            <div data-thumb="../Content/Imagenes/images/slides/thumbs/tree.jpg" data-src="../Content/Imagenes/images/slides/tree.jpg">
            </div>
        </div><!-- #camera_wrap_3 -->
    </div><!-- .fluid_container -->


@section Scripts {
<script type="text/javascript" src="~/Scripts/Slider/jquery.min.js"></script>
<script type="text/javascript" src="~/Scripts/Slider/jquery.mobile.customized.min.js"></script>
<script type="text/javascript" src="~/Scripts/Slider/jquery.easing.1.3.js"></script>
<script type="text/javascript" src="~/Scripts/Slider/camera.min.js"></script>
<script>
		jQuery(function(){

			jQuery('#camera_wrap_4').camera({
				height: 'auto',
				loader: 'bar',
				pagination: false,
				thumbnails: true,
				hover: false,
				opacityOnGrid: false,
				imagePath: '../Content/Imagenes/images/'
			});

		});
</script>
}


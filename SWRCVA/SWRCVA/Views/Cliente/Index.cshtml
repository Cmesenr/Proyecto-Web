@using PagedList.Mvc;
@model PagedList.IPagedList<SWRCVA.Models.Cliente>

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Clientes";
}

<h2>Clientes</h2>
<div class="MatenimientoFondo">
    <div class="text-right">
        <button type="button" id="btnAgregar" onclick="location.href='@Url.Action("Registrar", "Cliente")'" title="Registrar Nuevo" class="btn-circleplus btn-primary btn-lg"><span class="glyphicon glyphicon-plus"></span></button>
    </div>
    @using (Html.BeginForm("Index", "Proveedor", FormMethod.Get))
    {
        @Html.AntiForgeryToken()
        <p>
            <table>
                <tr>
                    <td>
                        Buscar por nombre:
                    </td>
                    <td>
                        @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control" })
                    </td>
                    <td>&nbsp;&nbsp;<input class="btn btn-primary edit" type="submit" value="Buscar" /></td>
                </tr>
            </table>
        </p>
    }
    <table class="table table-bordered table-hover">
        <tr class="active">
            <th>
                @Html.ActionLink("Nombre", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                Correo
            </th>
            <th>
                Teléfono
            </th>
            <th>
                Dirección
            </th>
            <th>
                Estado
            </th>
            <th></th>
        </tr>


        @foreach (var item in Model)
        {
            <tr class="warning">
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Correo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Direccion)
                </td>
                <td>
                    @if (item.Estado == 1)
                {
                        @("Activo");
                }
                else
                {
                        @("Inactivo");
                }
                </td>
                <td>
                    <button id="btnEditarMaterial" data-id="@item.IdCliente" type="button" class="btn btn-primary edit">Editar</button>&nbsp;|
                    <button id="btnBorrarMaterial" data-toggle="modal" data-target="#ModalConfirm" data-info="@item.Nombre" data-id="@item.IdCliente" type="button" class="btn btn-danger delete">Borrar</button>
                </td>
            </tr>
        }

    </table>
    <br />
    </div>
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index",
                                        new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
    @section Scripts {
        @Scripts.Render("~/bundles/FuncionesCliente")
    }

    <div class="modal fade" id="modal" role="dialog">
    </div>
    <div class="modal fade" id="ModalConfirm" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header bg-warning">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Borrar</h4>
                </div>
                <div class="modal-body">
                    <center><p id="TextModal"></p></center>
                </div>
                <div class="modal-footer">
                    <button type="button" data-dismiss="modal" class="btn btn-danger">Cancel</button>
                    <button id="btnModalborrar" type="button" value="" data-dismiss="modal" onclick="return EliminarCliente(this.value)" class="btn btn-primary">Continuar</button>
                </div>
            </div>

        </div>
    </div>
